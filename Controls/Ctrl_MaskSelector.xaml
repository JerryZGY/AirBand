<UserControl x:Class="AirBand.Controls.Ctrl_MaskSelector"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:AirBand.Controls"
            mc:Ignorable="d" d:DesignWidth="278" d:DesignHeight="111" Style="{StaticResource UserControl}" Loaded="ctrl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Btn_Prev" Style="{StaticResource SelectButton}" Tag="/AirBand;component/Materials/LeftArrow.png" Click="btn_Click"/>
        <Image x:Name="Img" Grid.Column="1" Width="198" Source="{Binding Mask, Mode=OneWay}" Stretch="Uniform"/>
        <Button x:Name="Btn_Next" Grid.Column="2" Style="{StaticResource SelectButton}" Tag="/AirBand;component/Materials/RightArrow.png" Click="btn_Click"/>
    </Grid>
</UserControl>