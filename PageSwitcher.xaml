<Window x:Class="AirBand.PageSwitcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirBand"
        mc:Ignorable="d"
        Title="AirBand" d:DesignWidth="1366" d:DesignHeight="768"
        Width="{Binding SystemParameters.PrimaryScreenHeight}" Height="{Binding SystemParameters.PrimaryScreenHeight}"
        ResizeMode="NoResize" WindowStyle="None" WindowState="Maximized" Background="Black">
    <Viewbox>
        <Grid Width="1366" Height="768">
            <ContentPresenter x:Name="Presenter"/>
            <Canvas x:Name="Canvas_Pointer" IsHitTestVisible="False" Width="1366" Height="768">
                <!--<ctrl:Ctrl_Cursor x:Name="Cur" Canvas.Left="633" Canvas.Top="334" IsHitTestVisible="False" Visibility="Collapsed"/>-->
            </Canvas>
        </Grid>
    </Viewbox>
</Window>