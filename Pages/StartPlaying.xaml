<UserControl x:Class="KinectAirBand.Pages.StartPlaying"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignWidth="1366" d:DesignHeight="768" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary Source="StartPlayingRes.xaml"/>
    </UserControl.Resources>
    <Grid Name="Grid_Main" Opacity="1">
        <Grid.Background>
            <ImageBrush ImageSource="/KinectAirBand;component/Resources/BackgroundN.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name="Button_Keyboard" Grid.Column="2" Height="128" Width="128">
            <Button.Background>
                <ImageBrush ImageSource="/KinectAirBand;component/Resources/Keyboard.png"/>
            </Button.Background>
            <Button.RenderTransform>
                <TranslateTransform X="200"/>
            </Button.RenderTransform>
        </Button>
        <Button Name="Button_Guitar" Grid.Row="1" Grid.Column="2" Height="128" Width="128">
            <Button.Background>
                <ImageBrush ImageSource="/KinectAirBand;component/Resources/Guitar.png"/>
            </Button.Background>
            <Button.RenderTransform>
                <TranslateTransform X="200"/>
            </Button.RenderTransform>
        </Button>
        <Button Name="Button_Back" Grid.Row="1" Grid.Column="1" Content="返回" Margin="0 0 0 20" Opacity="0" Style="{StaticResource ResourceKey= BackButton}" Click="Button_Back_Click">
            <Button.Background>
                <ImageBrush ImageSource="/KinectAirBand;component/Resources/Exit.png"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>