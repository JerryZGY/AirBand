<UserControl x:Class="KinectAirBand.Pages.Playing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ctrl="clr-namespace:KinectAirBand.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" d:DesignWidth="1366" d:DesignHeight="768" Loaded="Playing_Loaded">
    <UserControl.Resources>
        <ResourceDictionary Source="../ResDictionary/PlayingRes.xaml"/>
    </UserControl.Resources>
    <Canvas Name="Region">
        <Grid Name="Grid_Main" Opacity="1" Background="{Binding Background, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.RowSpan="4">
                <Grid Width="1366" Height="768">
                    <Image Source="{Binding Background, Mode=OneWay}"/>
                    <Grid Name="Grid_Controls"/>
                    <Image Grid.RowSpan="4" Name="Image_BackgroundRemoval" Stretch="Fill"/>
                </Grid>
            </Viewbox>
            <Button Name="Button_Piano" Content="鋼琴" HorizontalAlignment="Right" Style="{StaticResource ResourceKey= InstrumentButton}" Click="Button_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/KinectAirBand;component/Resources/Piano.png"/>
                </Button.Background>
                <Button.RenderTransform>
                    <TranslateTransform X="200"/>
                </Button.RenderTransform>
            </Button>
            <Button Name="Button_Guitar" Grid.Row="1" Content="吉他" HorizontalAlignment="Right" Style="{StaticResource ResourceKey= InstrumentButton}" Click="Button_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/KinectAirBand;component/Resources/Guitar.png"/>
                </Button.Background>
                <Button.RenderTransform>
                    <TranslateTransform X="200"/>
                </Button.RenderTransform>
            </Button>
            <Button Name="Button_Clear" Grid.Row="3" Content="移除樂器" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=InstrumentButton}" Click="Button_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/KinectAirBand;component/Resources/Ensemble.png"/>
                </Button.Background>
                <Button.RenderTransform>
                    <TranslateTransform X="200"/>
                </Button.RenderTransform>
            </Button>
            <Button Name="Button_Back" Grid.Row="3" Grid.Column="2" Content="返回" Opacity="0" Click="Button_Click" Tag="/KinectAirBand;component/Resources/Exit.png" Style="{StaticResource ResourceKey=BackButton}"/>
            <Canvas Name="Canvas_Pointer" Grid.RowSpan="4">
                <Image Name="Pointer" Source="/KinectAirBand;component/Resources/Target.png" Width="32" Height="32"/>
            </Canvas>
            <TextBlock Grid.Row="3" Text="演奏" Foreground="White" Margin="0 0 0 10" FontSize="32" FontFamily="華康瘦金體" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        </Grid>
    </Canvas>
</UserControl>